<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slice.Pages.Registration">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Frame BorderColor="Black" Margin="30,10">
                <Entry x:Name="FIOEntry" Placeholder="FIO" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,10">
                <Entry x:Name="LoginEntry" Placeholder="Login" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,10">
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="-15,-15"/>
            </Frame>
            <Button Clicked="Registration_Clicked" Text="Зарегестрироваться" Margin="30, 0" BackgroundColor="Gray" BorderColor="Black" CornerRadius="50" TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>