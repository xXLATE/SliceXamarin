<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slice.Pages.Login">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Frame BorderColor="Black" Margin="30,10">
                <Entry x:Name="LoginEntry" Placeholder="Login" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,10">
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="-15,-15"/>
            </Frame>
            <StackLayout Orientation="Vertical" Spacing="40">
                <Button Clicked="Registration_Clicked" Text="У меня нет аккаунта"  Margin="30, -20, 30, 0" TextColor="Blue" BackgroundColor="Transparent"></Button>
                <Button Clicked="Login_Clicked" Text="Авторизоваться"  Margin="30, -30, 30, 0" BackgroundColor="Gray" BorderColor="Black" CornerRadius="50" TextColor="White"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>